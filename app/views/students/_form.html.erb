<%= form_for(@student) do |f| %>
<% if @student.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@student.errors.count, "error") %></h2>
<ul>
	<% @student.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>
 <div>
	 <%= f.label :name %>	
 </div>
 <div>
	 <%= f.text_field :name %>	
 </div>
	 <%= f.submit %>		
<% end %>
